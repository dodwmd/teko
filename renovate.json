{    
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "labels": ["minor", "bugfix"],
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}